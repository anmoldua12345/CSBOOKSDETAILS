<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_books_third"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_width="152dp"
        android:layout_height="150dp" />

    <RelativeLayout
        android:id="@+id/bottom_rl"
        android:background="#3B484E"
        android:layout_toRightOf="@id/image_books_third"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/desc"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="DESCRIPTION"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:typeface="serif"
        android:textStyle="bold"/>


    <ScrollView
        android:layout_below="@id/desc"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="#fff"
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wait a moment please....."
            />

    </ScrollView>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/book_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A3DCDE"
        android:layout_toLeftOf="@id/bottom_rl"
        android:layout_below="@id/image_books_third">

        <TextView
            android:id="@+id/book_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Details"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"/>


        <FrameLayout
            android:id="@+id/publisher_frame"
            android:layout_marginTop="10dp"
            android:layout_below="@id/book_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publisher : "
                android:textStyle="bold"
                android:textSize="10dp"
                />

            <TextView
                android:id="@+id/publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wait.."
                android:layout_gravity="right"
                />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/by_frame"
            android:layout_marginTop="10dp"
            android:layout_below="@id/publisher_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By :  "
                android:textSize="10dp"
                />

            <TextView
                android:id="@+id/By"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wait.."
                android:layout_gravity="right" />

        </FrameLayout>


        <FrameLayout
            android:id="@+id/year_frame"
            android:layout_marginTop="10dp"
            android:layout_below="@id/by_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year :  "
                android:textSize="10dp"
                />

            <TextView
                android:id="@+id/Year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HELLO"
                android:layout_gravity="right"
                android:layout_marginRight="50dp"/>

        </FrameLayout>


        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_below="@id/year_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pages : "
                android:textSize="10dp"
                />

            <TextView
                android:id="@+id/Pages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HELLO"
                android:layout_gravity="right"
                android:layout_marginRight="50dp"/>

        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>